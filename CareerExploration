    <button onclick="generatePathway()">Generate Pathway</button>

    <div class="result" id="result"></div>

    <script>
        function generatePathway() {
            const workrole = document.getElementById('workrole').value;
            const degree = document.getElementById('degree').value;

            const certifications = [];
            const certElements = document.getElementsByName('certifications');
            for (const cert of certElements) {
                if (cert.checked) {
                    certifications.push(cert.nextSibling.nodeValue.trim());
                }
            }

            const industry = document.getElementById('industry').value;
            const college = document.getElementById('college').value;

            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = `
                <h2>Your Cybersecurity Pathway</h2>
                <p><strong>Work Role:</strong> ${workrole}</p>
                <p><strong>Degree:</strong> ${degree}</p>
                <p><strong>Certifications:</strong> ${certifications.join(', ')}</p>
                <p><strong>Industry:</strong> ${industry}</p>
                <p><strong>College:</strong> ${college}</p>
                <h3>Summary</h3>
                <p>You have chosen to pursue a career as a <strong>${workrole}</strong> in the <strong>${industry}</strong> industry. Your goal is to achieve a <strong>${degree}</strong> degree and obtain the following certifications: <strong>${certifications.join(', ')}</strong>. You plan to attend a <strong>${college}</strong> to complete your education.</p>
            `;
        }
    </script>

