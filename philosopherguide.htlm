    <script>
        // Tab switching function
        function switchTab(tabName) {
            // Hide all tab contents
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(tab => tab.classList.remove('active'));
            
            // Remove active class from all tabs
            const navTabs = document.querySelectorAll('.nav-tab');
            navTabs.forEach(tab => tab.classList.remove('active'));
            
            // Show selected tab content
            document.getElementById(tabName).classList.add('active');
            
            // Add active class to clicked tab
            event.target.classList.add('active');
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        
        // Toggle card expansion
        function toggleCard(card) {
            const wasExpanded = card.classList.contains('expanded');
            
            // Close all cards first
            const allCards = document.querySelectorAll('.philosopher-card');
            allCards.forEach(c => c.classList.remove('expanded'));
            
            // If card wasn't expanded, expand it
            if (!wasExpanded) {
                card.classList.add('expanded');
                // Scroll to card
                setTimeout(() => {
                    card.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            }
        }
        
        // Switch detail tabs within cards
        function switchDetailTab(event, sectionId) {
            event.stopPropagation();
            
            // Get parent card
            const card = event.target.closest('.philosopher-card');
            
            // Remove active class from all detail tabs in this card
            const detailTabs = card.querySelectorAll('.detail-tab');
            detailTabs.forEach(tab => tab.classList.remove('active'));
            
            // Add active class to clicked tab
            event.target.classList.add('active');
            
            // Hide all detail sections in this card
            const detailSections = card.querySelectorAll('.detail-section');
            detailSections.forEach(section => section.classList.remove('active'));
            
            // Show selected section
            const section = document.getElementById(sectionId);
            if (section) {
                section.classList.add('active');
            }
        }
        
        // Search functionality
        function searchCards(query) {
            query = query.toLowerCase();
            const cards = document.querySelectorAll('.philosopher-card');
            
            cards.forEach(card => {
                const searchData = card.getAttribute('data-name') || '';
                const name = card.querySelector('.philosopher-name').textContent.toLowerCase();
                const summary = card.querySelector('.philosopher-summary').textContent.toLowerCase();
                
                if (searchData.includes(query) || name.includes(query) || summary.includes(query)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }
    </script>
